# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
COMMAND_PREFIX=!

# Workflow Configuration
WORKFLOW_TIMEOUT=600
THREAD_AUTO_ARCHIVE=60
MAX_CONCURRENT_WORKFLOWS=10

# Channel Configuration
WORKFLOW_CATEGORY=Workflows
DEFAULT_CHANNEL_PREFIX=workflow-

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Feature Flags
ENABLE_THREAD_CREATION=true
ENABLE_CHANNEL_CREATION=true
ENABLE_ROLE_VERIFICATION=true

# Security Configuration
REQUIRE_ROLE_FOR_WORKFLOW=true
ALLOW_DM_COMMANDS=false

# Rate Limiting
WORKFLOW_COOLDOWN=30
COMMAND_RATE_LIMIT=5
